{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
  Cr√©ation d'une bataille
{% endblock %}

{% block body %}
  <div class="well">
    {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
      {{ form_label(form.name,'Nom de la bataille',{'label_attr':{'class':'col-sm-2 control-label'}}) }}
      {{ form_errors(form.name) }}
      <div class="col-sm-8">
        {{ form_widget(form.name,{'attr':{'class':'form-control'}})}}
      </div>
    </div>
    <div class="form-group">
          {{ form_label(form.date,"Quand :",{'label_attr':{'class':'col-sm-2 control-label'}})}}
          {{ form_errors(form.date)}}
          <div class="col-sm-8">
            {{ form_widget(form.date,{'attr':{'class':'form-controle '}})}}
            <br/>
              <small><i class="glyphicon glyphicon-warning-sign"></i> Format jj/mm/aaaa   hh:mm attendu</small>
          </div>
    </div>
    <div class="form-group">
      {{ form_label(form.lieu,'Lieu de la bataille',{'label_attr':{'class':'col-sm-2'}}) }}
      {{ form_errors(form.lieu)}}
      <div class="col-sm-8">
        {{ form_widget(form.lieu,{'attr':{'class':'form-controler'}})}}
      </div>
    </div>


    <div class="text-center">
      {{ form_widget(form.save,{'attr':{'class':'btn btn-default btn-xs'}})}}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
  </div>
{% endblock %}

{% block javascript %}
  {{ parent() }}
  <script>
    window.onload = function()
    {
        $('#calendar').datepicker({
          format: 'dd-mm-yyyy',
          autoclose: 'true',
          pickerPosition: 'bottom-left',
          minView:'month',
          language:'fr',
          inline: 'true',
          sideBySide: 'true'
        });

    }
  </script>
{% endblock %}
