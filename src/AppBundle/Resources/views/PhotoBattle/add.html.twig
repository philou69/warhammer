{% extends 'AppBundle::layout.html.twig' %}

{% form_theme form 'form/fields.html.twig' %}

{% block body %}
    <div class="well">
        {{ form_start(form) }}
        {{ form_errors(form)}}
        <div class="form-group">
            {{ form_label(form.files, form.files.vars.label,{'label_attr':{'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <input type="file" name="{{ form.files.vars.full_name }}" value id="{{ form.files.vars.id }}" class="form-control file" multiple accept="image/*">
            </div>
            {{ form_errors(form.files)}}
        </div>
        <div class="text-center">
            {{ form_widget(form.save,{'attr':{'class':'btn btn-default btn-sm'}})}}
        </div>
        {{ form_widget(form._token)}}
        {{ form_end(form, {'render_rest': false}) }}
        <div>
            <a class="btn btn-default btn-xs" href="{{ path('battle_list')}}"><i class="glyphicon glyphicon-chevron-left"></i>Retour aux batailles</a>
        </div>
    </div>


{% endblock %}
