<div>
    {% if listPhotos|length > 0 %}
    <ul class="pagination">
        {% for p in range(1, nbPages) %}
            <li {% if p == page %}class="active" {% endif %} >
                <a class="page" href="{{ path('photo_user_page', {'page': p }) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>

    <ul>
        {% for photo in listPhotos %}
            <li class="row"><img src="{{ asset(photo.webPath) | imagine_filter('thumb') }}" alt="{{ photo.alt }}" class="col-sm-2">
                <div class="col-sm-8">
                    http://warhantmillebattle.fr{{ asset(photo.webpath)}}
                </div>
            </li>
        {% endfor %}
    </ul>
    {% else %}
        Vous n'avez pas encore charger de photos
    {% endif %}
</div>