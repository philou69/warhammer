{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Liste des armées{% endblock %}

{% block body %}
	<h2 class="text-center">Liste des armées</h2>
	<ul class="nav nav-tabs row">
	{% for user in listUsers if user == app.user %}
		<li class="active col-sm-2">
			<a data-toggle="tab" href="#{{ user.username }}-armies">
				Vos armées
			</a>
		</li>
	{% endfor %}
	{% for user in listUsers if user != app.user %}
		<li class="col-sm-2">
			<a data-toggle="tab" href="#{{ user.username }}-armies">
				Armées de {{ user.username }}
			</a>
		</li>
	{% endfor %}
	</ul>

	{% for user in listUsers  %}
		{% if loop.first %}
			<div class="tab-content" >
		{% endif %}
		<div id="{{ user.username }}-armies" class="tab-pane fade {% if user == app.user %} in active {% endif %}">
			{% for army in listArmies if army.user == user %}
				<div class="well row">
					<div class="imageArmy col-sm-2">
						Image de l'armée. <br>
						(option à venir)
					</div>
					<div id="army" class="col-sm-10">
						<h4 class="text-center"><a href="{{ path('army_view',{'slugArmy': army.slugArmy}) }}">{{ army.name }}</a></h4>
						<ul class="list-unstyled">
							<li>{{ army.points }} points</li>
							<li>{{ army.race.name }}</li>
						</ul>
					</div>
				</div>
				{% else %}
				<p class="well text-center">
					{% if user == app.user %}
						Vous n'avez pas encore enregistré d'armées. <br>
						Rendez vous sur la page <a href="{{ path('army_add') }}">d'inscription</a>
					{% endif %}
					{{ user.username }} n'a pas encore enregistré d'armées.
				</p>
			{% endfor %}
		</div>
		{% if loop.last %}
			</div>
		{% endif %}
	{% endfor %}


{% endblock %}
