{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
  Créer votre armée
{% endblock %}

{% block body %}
  <div class="well">
    {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class="form-group">
      {{ form_label(form.name,'Nom de l\'armée',{'label_attr':{'class':'col-sm-2 control-label'}})}}
      {{ form_errors(form.name) }}
      <div class="col-sm-8">
        {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(form.race,'Race : ',{'label_attr':{'class':'col-sm-2'}}) }}
      {{ form_errors(form.race)}}
      <div class="col-sm-8">
        {{ form_widget(form.race,{'attr':{'class':'form-control'}}) }}
      </div>
    </div>
    <div class="text-center">
      {{ form_widget(form.save,{'attr':{'class':'btn btn-default btn-sm'}}) }}
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
    <div class="text-right">
      <a class="btn btn-default btn-xs" href="{{ path('app_armies') }}"><i class="glyphicon glyphicon-chevron-left"></i> retour aux armées</a>
    </div>
  </div>
{% endblock %}
