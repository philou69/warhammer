{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
	Suppresion d'une unité
{% endblock %}

{% block body %}
	<div class="jumbotron">
		<h2 class="text-center">Suppresion de la unité {{ unitArmy.unit.name }}</h2>

		<form action="{{ path('unit_army_delete',{'id': unitArmy.id})}}" method="post">
			<div class="row">
				<label class="col-sm-6" for="supression">Etes-vous sur de vouloir supprimer cette unit</label>
				<input type="submit" value="Supprimer" class="btn btn-danger btn-sm col-sm-2">
			</div>
			{{ form_rest(form)}}
		</form>
		<div class="text-right">
			<a class="btn btn-default btn-xs" href="{{ path('army_view',{'slug': slug})}}"><i class="glyphicon glyphicon-chevron-left"></i>Retour à l'armée</a>
		</div>
	</div>
{% endblock %}
