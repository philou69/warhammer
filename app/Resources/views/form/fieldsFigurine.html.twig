{% block file_row%}
    <div class="form-group">
        <label for="{{ id }}" class='col-xs-5 col-sm-3 control-label'>{{ label }}</label>
        {{ form_errors(form) }}
        <div class="col-xs-6 col-sm-5">
            <input type="file" name="{{ full_name }}" value="{{value}}" id="{{ id}}" class="form-control file">
        </div>
    </div>
{% endblock %}

{% block text_row %}
    <div class="form-group">
        <label for="{{ id }}" class='col-xs-5 col-sm-3 control-label'>{{ label }}</label>
        {{ form_errors(form) }}
        <div class="col-xs-6 col-sm-5">
            <input type="text" name="{{ full_name }}" value="{{value}}" id="{{ id}}" class="form-control">
        </div>
    </div>
{% endblock %}